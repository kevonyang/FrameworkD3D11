Texture2D Tex;
SamplerState Sampler;

struct PSInput
{
	float4 Pos:SV_POSITION;
	float2 Texcoord:TEXCOORD0;
};

float4 PSMain(PSInput input):SV_TARGET
{
	float4 output;
	output = Tex.Sample(Sampler, input.Texcoord);
	if (output.r == 0.0f)
	{
		output.a = 0.0f;
	}
	//output = float4(1.0f, 1.0f, 1.0f, 1.0f);
	return output;
}
